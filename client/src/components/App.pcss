:global {
  @import "../../node_modules/normalize.css/normalize.css";

  html {
    font-family: "Comic Sans Ms";
    min-height: 100vh;
    font-size: 16px;
    background-image: linear-gradient(
        0deg,
        rgba(0, 250, 255, 0.8),
        rgba(255, 255, 255, 0.9)
      ),
      url("../assets/money.jpg");
  }

  body {
    padding: 1em;
    @media (min-width: 640px) {
      padding: 2em;
    }
  }
}
